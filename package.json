{
  "name": "@perymimon/react-anime-manager",
  "version": "3.0.0",
  "type": "module",
  "private": false,
  "main": "src/useAnimeManager.js",
  "files": [
    "src",
    "!src/stories",
    "!src/tests",
    "!src/*.test.js"
  ],
  "workspaces": [
    "../"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "nodemon --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test:debug": "nodemon --inspect-brk --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand ",
    "story": "start-storybook -p 6006 -s public",
    "pub": "npm publish --tag alpha",
    "build-storybook": "build-storybook -s public",
    "deploy-storybook": "storybook-to-ghpages",
    "xpostinstall": "npm link @perymimon/react-hooks @perymimon/let-map"
  },
  "dependencies": {
    "@perymimon/let-map": "^1.0.1-beta.0",
    "@perymimon/react-hooks": "1.0.0-beta.9"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^13.0.0-alpha.7",
    "@testing-library/react-hooks": "8.0.0-alpha.1",
    "jest": "^28.1.1",
    "react-test-renderer": "^18.2.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transform": {}
  }
}
